<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/white"
                android:width="2dp"/>
            <padding
                android:top="15dp"
                android:right="15dp"
                android:left="15dp"
                android:bottom="15dp"/>
            <corners
                android:radius="6dp"/>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/white"
                android:width="2dp"/>
            <padding
                android:top="15dp"
                android:right="15dp"
                android:left="15dp"
                android:bottom="15dp"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>

</selector>