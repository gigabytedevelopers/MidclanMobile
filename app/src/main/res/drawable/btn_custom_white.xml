<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_hint"/>
            <padding
                android:top="12dp"
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp"/>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <padding
                android:top="12dp"
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

</selector>