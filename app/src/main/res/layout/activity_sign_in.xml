<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignInActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_smlarge"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sign_in_logo"
                android:layout_width="@dimen/logo_normal"
                android:layout_height="@dimen/logo_normal"
                android:src="@drawable/logo_white"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_sign_in"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/latobold"
                android:layout_marginBottom="@dimen/spacing_smlarge"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/latoregular"
                android:hint="@string/text_field_username"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColorHint="@color/white_hint"
                android:layout_marginBottom="@dimen/spacing_middle"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/passWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="@color/white_hint"
                android:fontFamily="@font/latoregular"
                android:hint="@string/text_field_password"
                android:layout_marginBottom="@dimen/marginSmall"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_forgot_password"
                android:layout_marginBottom="@dimen/spacing_smlarge"
                android:fontFamily="@font/latoregular"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/colorAccent"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleDuration="350"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleDelayClick="true"
                android:background="@drawable/btn_white"
                android:layout_marginBottom="@dimen/spacing_smlarge">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_sign_in"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/latobold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            </com.balysv.materialripple.MaterialRippleLayout>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_create_account"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/latoregular"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_white"
                android:layout_marginTop="@dimen/spacing_smlarge"
                android:layout_marginBottom="@dimen/spacing_smlarge"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sign_in_with"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/latoregular"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:layout_marginBottom="@dimen/marginMedium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/sign_in_with_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorAccent"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleDuration="350"
                    app:mrl_rippleFadeDuration="75"
                    app:mrl_rippleDelayClick="true">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_social_media_login"
                        android:layout_height="@dimen/icon_social_media_login"
                        app:srcCompat="@drawable/ic_facebook_btn"
                        android:tint="@color/white"
                        android:layout_marginEnd="@dimen/spacing_smlarge"/>
                </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/sign_in_with_tw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorAccent"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleDuration="350"
                    app:mrl_rippleFadeDuration="75"
                    app:mrl_rippleDelayClick="true">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_social_media_login"
                        android:layout_height="@dimen/icon_social_media_login"
                        app:srcCompat="@drawable/ic_twitter_logo_btn"
                        android:tint="@color/white"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>


