<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_xmedium">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_comment_image"
        android:layout_width="@dimen/avatar_chat_size"
        android:layout_height="@dimen/avatar_chat_size"
        android:src="@drawable/test"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/spacing_medium"
        app:civ_border="false"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:padding="@dimen/spacing_small">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/latosemibold"
            tools:text="@string/users_doctor"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/primary_text"
            android:layout_below="@id/user_name_comment"
            android:fontFamily="@font/latoregular"
            tools:text="@string/dummy_text"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/secondary_text"
            android:layout_below="@id/user_comment_text"
            android:fontFamily="@font/latoregular"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            tools:text="yesterday"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:layout_below="@id/user_comment_time">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/comment_like"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:tint="@color/primary_text"
                app:srcCompat="@drawable/ic_heart_outline"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/comment_reply"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_toEndOf="@id/comment_like"
                android:layout_marginStart="@dimen/spacing_smlarge"
                app:tint="@color/primary_text"
                app:srcCompat="@drawable/ic_comment"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>