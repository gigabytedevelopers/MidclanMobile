<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_preview_size">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/post_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/play_video"
            android:layout_width="@dimen/icon_social_media_login"
            android:layout_height="@dimen/icon_social_media_login"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/latobold"
        android:singleLine="true"
        tools:text="@string/dummy_title"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_body"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/latoregular"
            tools:text="@string/dummy_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_video_post_profile"
            android:layout_width="@dimen/avatar_post_size"
            android:layout_height="@dimen/avatar_post_size"
            android:src="@drawable/test"
            app:civ_border="false"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/spacing_medium"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_video_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="@font/latosemibold"
                tools:text="mezueceejay"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:fontFamily="@font/latoregular"
                tools:text="Today"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:padding="@dimen/spacing_small"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/post_video_like"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:srcCompat="@drawable/ic_heart_outline"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/post_video_comment"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_toEndOf="@id/post_video_like"
                android:layout_marginStart="@dimen/spacing_smlarge"
                app:srcCompat="@drawable/ic_comment"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/post_video_share"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_toEndOf="@id/post_video_comment"
                android:layout_marginStart="@dimen/spacing_smlarge"
                app:srcCompat="@drawable/ic_share"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/post_video_bookmark"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_toEndOf="@id/post_video_share"
                android:layout_marginStart="@dimen/spacing_smlarge"
                app:srcCompat="@drawable/ic_bookmark_outline"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>