                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_university"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_pharmacist_alm_mata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:hint="@string/text_field_user_alma_mata"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_pharmacist_referees_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textAutoComplete"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_referees_contacts"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_pharmacist_bio_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textAutoComplete"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_bio_data"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
            </LinearLayout>
            <!--Lab Technician Info List-->
            <LinearLayout
                android:id="@+id/lab_technician_user_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_lab_technician_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_dob"
                    android:inputType="date"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_lab_technician_soo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_soo"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_lab_technician_lga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_lga"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_lab_technician_college_of_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_college_of_study"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

