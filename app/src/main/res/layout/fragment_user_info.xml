<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".fragments.UserInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_large"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_large"
            android:orientation="vertical">
            <!--User info list-->
            <LinearLayout
                android:id="@+id/user_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/address_user"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/create_user_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/user_state"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/create_user_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/user_country"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_user_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/user_date_of_birth"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/create_user_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/user_gender"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
            </LinearLayout>
            <!--Doctor Info List-->
