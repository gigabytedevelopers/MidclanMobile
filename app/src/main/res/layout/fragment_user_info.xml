                    android:hint="@string/text_field_user_lga"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_pharmacist_college_of_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/text_field_user_college_of_study"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/registration_edit_text_bg"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="@dimen/spacing_smlarge"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_pharmacist_university"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
